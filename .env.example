# Токен бота, полученный от @BotFather
BOT_TOKEN=your_bot_token_here

# ID администратора Telegram (числовое значение)
ADMIN_TELEGRAM_ID=123456789

# Настройки подключения к базе данных
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_DATABASE=minecraft_bot

# Настройки Minecraft сервера
MINECRAFT_HOST=localhost
MINECRAFT_RCON_PORT=25575
MINECRAFT_RCON_PASSWORD=your_rcon_password

# Настройки приложения
NODE_ENV=development
APP_PORT=3000
LOG_LEVEL=info
SESSION_TTL=86400

# Настройки голосования
VOTING_DURATION_DAYS=1
VOTING_DURATION_HOURS=0
VOTING_DURATION_MINUTES=0
MIN_VOTES_REQUIRED=3 